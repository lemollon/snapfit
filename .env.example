# ===========================================
# SnapFit Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ==========================================
# DATABASE (Required)
# ==========================================
# PostgreSQL connection string
# Get from: Render, Supabase, Neon, Railway, etc.
DATABASE_URL="postgresql://user:password@host:5432/snapfit"

# ==========================================
# AUTHENTICATION (Required)
# ==========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Your production URL (no trailing slash)
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# CLOUDINARY - Image Storage (Required for Production)
# ==========================================
# Sign up: https://cloudinary.com/users/register_free
# Get keys from: https://cloudinary.com/console
# Free tier: 25GB storage, 25GB bandwidth/month
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ==========================================
# RESEND - Email Service (Required for Production)
# ==========================================
# Sign up: https://resend.com/signup
# Get API key: https://resend.com/api-keys
# Free tier: 3,000 emails/month
RESEND_API_KEY=""

# Your verified sender email (set up domain in Resend dashboard)
# For testing, use: onboarding@resend.dev
FROM_EMAIL="noreply@yourdomain.com"

# ==========================================
# OPTIONAL - AI Features
# ==========================================
# For AI workout programs and form analysis
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""

# ==========================================
# OPTIONAL - Payments (if adding subscriptions)
# ==========================================
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
